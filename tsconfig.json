{
  //  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "rootDir": "src",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    ".idea",
    "dist",
    "dist/*.js",
    "node_modules",
    "*.js"
  ]
}